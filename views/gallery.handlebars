<section class="container">
  <h3 class="gallery-name">{{gallery.name}}</h3>
  <h4>Next Time I: {{format_time gallery.starting_date}}</h4>
   <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
      <button type="submit" class="btn">Create Journal Entry</button>
    </div>

  <h4>What to put here?: {{format_time gallery.ending_date}}</h4>
  <section class="flex-row justify-center">
    {{#each gallery.paintings as |painting|}}
    {{> painting-details}}
    {{/each}}
  </section>
</section>
